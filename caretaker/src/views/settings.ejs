<!DOCTYPE html>
<html lang="en">

<script src="https://kit.fontawesome.com/f314d0292c.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
<script src = "https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
<script src="settings.js"></script>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <meta name="theme-color" content="#000000">
    <link rel="manifest" href="/manifest.json">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" type="text/css" href="style.css">
    <title>SRHM Caretaker</title>
</head>

<body class='bodyclassic'>

    <div class="loader-wrapper">
        <span class="loader"><span class="loader-inner"></span></span>
    </div>

    <div class="loader-wrapper-left">
        <span class="loader"><span class="loader-inner"></span></span>
    </div>

    <div class='horizontal_box' name='titlebox'>

        <div class="three_split">
            <br /> <br />
            <form action="./main" method="get"> 
                <button id='homeButton' class="icon_button_blue">
                    <i class="fas fa-home" style='font-size:28px'></i> 
                    Home
                </button>
            </form>
        </div>

        <div class = 'three_split'>
            <div><h1>Settings</h1></div>
        </div> 

        <div class='three_split'></div>
    </div>

    <br/>

    <div class="horizontal_box" name="dataSharingOptions">

        <div class="five_split"></div>

        <div class="five_split"></div>

        <div class="five_split">
            <br/><br/>
            <h2 style="text-align: left;">Shared Data Expiry</h2>
                <label class="container">
                    <input id='indefiniteButton' type="radio" name="ttl" value="indefinite">
                    <span class="checkmark"></span>
                    Indefinite
                </label><br />
                <label class="container">
                    <input id='monthButton' type="radio" name="ttl" value="month">
                    <span class="checkmark"></span>
                       1 month
                </label><br /> 
                <label class="container">
                    <input id='weekButton' type="radio" name="ttl" value="week">
                    <span class="checkmark"></span>
                        1 week
                </label><br /> 
        </div>

        <div class="five_split"></div>

        <div class="five_split"></div>

    </div>
    
    <br />

    <div id="dialog-confirm" title="Unlink?">
        <p>
            <i class="fas fa-exclamation-triangle" style='font-size:42px; float:center; margin:12px 12px 20px 0;'></i>
            <br />
            Unlinking permanently disconnects you from your caretaker. There might be data loss. Are you sure?
        </p>
    </div>

    <div class="horizontal_box" name="other">

        <div class="three_split"></div>

        <div class="three_split">
            <br /> <br />
            <button id='advancedButton' class="icon_button_red">
                <i class="fas fa-tools" style='font-size:28px'></i> 
                Advanced
            </button>
        </div>

        <div class="three_split"></div>

    </div>

    <!-- Advanced Popup -->
    <div class="horizontal_box" name="popup">

        <div class="three_split"></div>
        
        <div class="three_split">
            <div id="advancedPopup" class='modalPopup'>
                <div class="form-popup" id="popupForm">
                  <form id="advancedForm" class="form-container" style="text-align: center;">

                    <div class='horizontal_box'>
                        <h2 style="color: black;">Advanced Settings</h2>
                        <button type="button" style='font-size:25px; height: 62px;' class="button_red" onclick="closeForm('advancedPopup')">X</button>
                    </div>
                    <hr />
                    <button id='unlinkButton' class="icon_button_red">
                        <i class="fas fa-unlink" style='font-size:28px'></i> 
                        Unlink
                    </button>
                  </form>
                </div>
            </div>
        </div>

        <div class="three_split"></div>

    </div>

</body>

</html>