<!DOCTYPE html>
<html lang="en">

<script src="https://kit.fontawesome.com/f314d0292c.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
<script src="index.js"></script>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <meta name="theme-color" content="#000000">

    <link rel="manifest" href="/manifest.json">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="stylesheet" type="text/css" href="style.css">

    <title>SRHM Patient</title>
</head>

<body class='bodyclassic'>

    <div class="loader-wrapper">
        <span class="loader"><span class="loader-inner"></span></span>
    </div>

    <div class="loader-wrapper-left">
        <span class="loader"><span class="loader-inner"></span></span>
    </div>

    <div class="horizontal_box" name="status_group">
        <div class="three_split">
            <div class = "horizontal_box">
                <div class="four_split">
                    <br /> <br />
                    <i id='pairStatusIcon' class="fas fa-link" style='font-size:42px;color:white'></i>
                </div>
                <div class="four_split"></div>
                <div class="four_split"></div>
                <div class="four_split"></div>
            </div>
        </div>

        <div class="three_split">
            &nbsp;
            <div id="title" class='demotext'>Patient Driver</div>
        </div>

        <div class="three_split">
            <div class = "horizontal_box">
                <div class="four_split"></div>
                <div class="four_split"></div>
                <div class="four_split"></div>
                <div class="four_split">
                    <br /> <br />
                    <a href="#" class="notification">
                        <span>Inbox</span>
                        <span class="badge">3</span>
                    </a> 
                </div>
            </div>
        </div>

    </div>

    <br /> <br />

    <div class="horizontal_box" name="measurement_group">

        <div class="four_split"></div>

        <div class="four_split">
            <div id="hrDisplay">Last measured HR: <strong> <%= hrreading %> </strong></div>
            <form id ="hrform">
                <input id="hrreadingIn" type="text"/>
                <input class="button_blue" type="submit" value="Update" />
            </form>
        </div>

        <div class="four_split">
            <div id="bpDisplay">Last measured BPL: <strong> <%= bpreading %> </strong></div>
            <form id="bpform">
                <input id="bpsreadingIn" type="text"/> 
                <input id="bpdreadingIn" type="text"/> 
                <input class="button_blue" type="submit" value="Update" />
            </form>
        </div>

        <div class="four_split"></div>

    </div>

    <br /><br/>

    <div class="horizontal_box" name="othergroup">

        <div class="four_split"></div>

        <div class="four_split">
            <button id="deleteUserPINButton" class="button_red">DELETE USER PIN</button>
        </div>
        
        <div class="four_split">
            <form action="./settings" method="get">
                <button class="icon_button_blue" value="Settings">
                    <i class="fas fa-tools" style='font-size:28px'></i> 
                    Settings
                </button>
            </form>
        </div>

        <div class="four_split"></div>

    </div>

    <hr />

    <div class="horizontal_box" name="popup">

        <div class="three_split"></div>
        
        <div class="three_split">
            <div id="loginPopup">
                <div class="form-popup" id="popupForm">
                  <form id="pairForm" class="form-container" style="text-align: right;">
                    <h2>Pair with Caretaker</h2>
                    <label for="userPIN">
                    <strong>Your PIN </strong>
                    </label>
                    <input type="text" id="userPINIn" name="userPIN">
                    <br /> <br />
                    <label for="targetPIN">
                    <strong>Caretaker PIN:</strong>
                    </label>
                    <input type="text" id="targetPINIn" onkeyup="pinInsertFormatting(this)" 
                        placeholder="XXXX-XXXX-XXXX-XXXX" name="targetPIN" required>
                    <br /> <br />
                    <button id="linkButton" class="icon_button_green" type="submit">
                        <i class="fas fa-link" style='font-size:28px'></i>
                        Link
                    </button>
                    <button type="button" class="button_red" onclick="closeForm()">Cancel</button>
                  </form>
                </div>
            </div>
        </div>

        <div class="three_split"></div>

    </div>
    
</body>

</html>