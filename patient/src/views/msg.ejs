<!DOCTYPE html>
<html lang="en">

<script src="https://kit.fontawesome.com/f314d0292c.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="msg.js"></script>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <meta name="theme-color" content="#000000">

    <link rel="manifest" href="/manifest.json">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="stylesheet" type="text/css" href="style.css">

    <title>SRHM Patient</title>
</head>

<body class='bodyclassic'>

    <div class="loader-wrapper">
        <span class="loader"><span class="loader-inner"></span></span>
    </div>

    <div class="loader-wrapper-left">
        <span class="loader"><span class="loader-inner"></span></span>
    </div>

    <div class="horizontal_box" name="status_group">
        <div class="three_split">
            <br /> <br />
            <form action="./main" method="get"> 
                <button id='homeButton' class="icon_button_blue">
                    <i class="fas fa-home" style='font-size:28px'></i> 
                    Home
                </button>
            </form>
        </div>

        <div class="three_split">
            <br/>
            <div id="title"><h1>Messages</h1></div>
        </div>

        <div class="three_split">
            <div class = "horizontal_box">
                <div class="four_split"></div>
                <div class="four_split"></div>
                <div class="four_split"></div>
                <div class="four_split"></div>
            </div>
        </div>

    </div>

    <br /> <br />

    <div class="horizontal_box" name="measurement_group">

        <div class="five_split">
            <button id='addPopupButton' class="icon_button_blue">
                <i class="fas fa-plus-circle" style='font-size:48px'></i> 
                 New
            </button>
        </div>

        <div class="two_split table-wrapper">
            <table id='table' class="fl-table">
                <thead>
                <tr>
                    <th>&nbsp;</th>
                    <th>Date/Time</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Expiry</th>
                </tr>
                </thead>
                <tbody id='tableBody'>
                <tbody>
            </table>
        </div>

        <div class="five_split">
            <button id='previousPageButton' class="icon_button_blue">
                <i class="fas fa-chevron-left" style='font-size:48px'></i>
            </button>
            <button id='nextPageButton' class="icon_button_blue">
                <i class="fas fa-chevron-right" style='font-size:48px'></i>
            </button>
        </div>

    </div>

    <br /><br/>

    <div class="horizontal_box" name="othergroup">

        <div class="four_split"></div>

        <div class="four_split"></div>
        
        <div class="four_split">
            <form id='settingsButton' action="./settings" method="get">
                <button class="icon_button_blue" value="Settings">
                    <i class="fas fa-cog" style='font-size:35px'></i> 
                    Settings
                </button>
            </form>
        </div>

        <div class="four_split"></div>
    </div>

    <!-- Read Popup -->
    <div id="readPopup" class='modalPopup'>
        <div class="form-popup">
            <form id="readForm" class="form-container" style="text-align: center;">
                <div class='horizontal_box'>
                    <h2 style="color: black;">Read Message</h2>
                    <button type="button" style='font-size:25px; height: 62px;' class="button_red" onclick="closeForm('read')">X</button>
                </div>
                <button id="replyButton" class="icon_button_green">
                    <i class="fas fa-reply" style='font-size:28px'></i>
                    Reply
                </button>
                <div style="text-align: left;">
                    <label for="subjOut">
                        <strong>Subject:</strong>
                    </label>
                    <input type="text" id="subjOut" style="color:black; font-size: 18px;" name="subjOut" readonly>
                    <br />
                    <label for="txtOut">
                        <strong>Message:</strong>
                    </label>
                    <textarea id="txtOut" rows='6' cols='27'  style="line-height: normal; resize:none; color:black; font-size: 17px;" name="txtOut" 
                            placeholder='Your message' readonly></textarea>    
                </div>
            </form>
        </div>
    </div>
    
    <!-- Add Popup -->
    <div id="addPopup" class='modalPopup'>
        <div class="form-popup">
            <form id="addForm" class="form-container" style="text-align: center;">

                <div class='horizontal_box'>
                    <h2 style="color: black;">Compose Message</h2>
                    <button type="button" style='font-size:25px; height: 62px;' class="button_red" onclick="closeForm('add')">X</button>
                </div>

                <div style="text-align: left;">
                    <label for="subjIn">
                        <strong>Subject:</strong>
                    </label>
                    <input type="text" id="subjIn" style="color:black; font-size: 20px;" name="subjIn" 
                            placeholder='Your subject' required>
                    <br />

                    <label for="txtIn">
                        <strong>Message:</strong>
                    </label>
                    <textarea id="txtIn" rows='6' cols='27' style="line-height: normal; resize:none; color:black; font-size: 17px;"name="txtIn" 
                    placeholder='Your message' required></textarea>    
                </div>
                
                <br />
                <button id="sendButton" class="icon_button_green">
                    <i class="fas fa-paper-plane" style='font-size:28px'></i>
                    Send
                </button>

            </form>
        </div>
    </div>


</body>

</html>